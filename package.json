{
  "name": "face-brightness-control",
  "version": "1.0.0",
  "description": "人脸检测自动控制屏幕亮度",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron .",
    "dev": "chcp 65001 >nul && electron . --dev",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "face-detection",
    "brightness"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@vladmandic/face-api": "^1.7.15"
  },
  "build": {
    "appId": "com.face-brightness-control.app",
    "productName": "人脸亮度控制",
    "electronVersion": "39.0.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!dist",
      "!.vscode",
      "!.git",
      "!.github",
      "!.claude"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "人脸亮度控制"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
